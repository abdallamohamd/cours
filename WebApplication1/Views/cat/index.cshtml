@model List<category>
@{
    ViewData["Title"] = "index";
}

<div class="row">
    <div class="col-md-4 mx-auto rounded border p-3">

        <h1 class="text-center mb-5 text-primary "> All Categories</h1>
    </div>
</div>

<div class="row">
    <div class="col">
        <a class="btn btn-primary" asp-controller="cat" asp-action="add"> Add Category</a>
    </div>
</div>

<br />
<table class="table">
    <thead>
        <tr>
            <th> ID</th>
            <th> Name</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td> @item.Id</td>
                <td> @item.Name</td>
                <td style="white-space:nowrap">
                    <a class="btn btn-primary btn-sm" asp-controller="cat" asp-action="edite" asp-route-id="@item.Id">EDITE</a>
                    <a class="btn btn-danger btn-sm" asp-controller="cat" asp-action="delete"
                       asp-route-id="@item.Id" onclick="return confirm ('are you sure?')">    Delete</a>
                </td>
            </tr>
        }
    </tbody>

</table>
