@model WebApplication1.Models.labs

@{
    ViewData["Title"] = "edite";
}
<div class="row">
    <div class="col-md-4 mx-auto rounded border p-3">

        <h1 class="text-center mb-5 text-primary">Edite Labs</h1>
    </div>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="sedite" asp-route-id="@Model.Id" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group row">
                <div class=" col-sm-4 d-grid">

                    <input type="submit" value="Edite" class="btn btn-danger" />
                </div>
            </div>
        </form>
    </div>
</div>

<br />

<div class="row">
    <div class=" col-sm-4 d-grid">
        <a class="btn btn-outline-primary" asp-action="inndex" role="button">Back to List</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
